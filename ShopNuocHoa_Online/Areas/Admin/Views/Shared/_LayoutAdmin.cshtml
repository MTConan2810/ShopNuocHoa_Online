<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Quản lí shop nước hoa</title>

    <!-- Bootstrap Core CSS -->

    <link href="~/Areas/Admin/Asset/css/bootstrap.min.css" rel="stylesheet" />

    <!-- MetisMenu CSS -->

    <link href="~/Areas/Admin/Asset/css/metisMenu.min.css" rel="stylesheet" />

    <!-- Timeline CSS -->

    <link href="~/Areas/Admin/Asset/css/timeline.css" rel="stylesheet" />

    <!-- Custom CSS -->

    <link href="~/Areas/Admin/Asset/css/startmin.css" rel="stylesheet" />

    <!-- Morris Charts CSS -->

    <link href="~/Areas/Admin/Asset/css/morris.css" rel="stylesheet" />

    <!-- Custom Fonts -->
    <link href="~/Areas/Admin/Asset/css/font-awesome.min.css" rel="stylesheet" type="text/css">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>
    <div id="wrapper">
        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <div class="navbar-header">
                <a class="navbar-brand" href="@Url.Action("Index","Home")">Trang Chủ Admin</a>
            </div>
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>

            <ul class="nav navbar-nav navbar-left navbar-top-links">
                <li><a href="/"><i class="fa fa-home fa-fw"></i>Trang Chủ Website</a></li>
            </ul>

            <ul class="nav navbar-right navbar-top-links">
                @if (Session["HoTen"] != null)
                {
    <li><a class="fade_open"><strong>@Session["HoTen"]</strong></a></li>
                    <li><a href="@Url.Action("Logout","Home")"><i class="fa fa-sign-out fa-fw"></i> Đăng xuất</a></li>
 }
                                else
                                {
                    <li><a href="@Url.Action("DangNhap","Home")" class="fade_open">Đăng nhập</a></li>}
            </ul>
            <!-- /.navbar-top-links -->

            <div class="navbar-default sidebar" role="navigation">
                <div class="sidebar-nav navbar-collapse">
                    <ul class="nav" id="side-menu">
                        <li class="sidebar-search">
                            <img src="logo.PNG" />
                        </li>
                        <li>
                            <a href="@Url.Action("Index","DanhMucs")" class="active" style="background-color:white"><i class="fa fa-dashboard fa-fw" style="background-color:white"></i> Bảo trì danh mục</a>
                        </li>
                        <li>
                            <a href="@Url.Action("Index","SanPhams")" class="active" style="background-color:white"><i class="fa fa-dashboard fa-fw" style="background-color:white"></i> Bảo trì sản phẩm</a>
                            <!-- /.nav-second-level -->
                        </li>
                        <li>
                            <a href="@Url.Action("Index","LienHes")" style="background-color:white"><i class="fa fa-dashboard fa-fw" style="background-color:white"></i> Bảo trì liên hệ</a>
                        </li>
                        <li>
                            <a href="@Url.Action("Index","Blogs")" style="background-color:white"><i class="fa fa-dashboard fa-fw" style="background-color:white"></i> Bảo trì blog</a>
                        </li>
                        <li>
                            <a href="@Url.Action("Index","DonHangs")" class="active" style="background-color:white"><i class="fa fa-dashboard fa-fw" style="background-color:white"></i> Quản lý đơn hàng</a>
                            <!-- /.nav-second-level -->
                        </li>
                        <li>
                            <a href="@Url.Action("Index","TaiKhoans")" class="active" style="background-color:white"><i class="fa fa-dashboard fa-fw" style="background-color:white"></i> Quản lý tài khoản</a>
                            <!-- /.nav-second-level -->
                        </li>
                        <li>
                            <a href="@Url.Action("Index","KhuyenMais")" class="active" style="background-color:white"><i class="fa fa-dashboard fa-fw" style="background-color:white"></i> Bảo trì khuyến mãi</a>
                            <!-- /.nav-second-level -->
                        </li>
                        <li>
                            <a href="@Url.Action("Index","BinhLuans")" class="active" style="background-color:white"><i class="fa fa-dashboard fa-fw" style="background-color:white"></i> Quản lý bình luận</a>
                            <!-- /.nav-second-level -->
                        </li>
                        <li>
                            <a href="@Url.Action("Index","KhachHangs")" class="active" style="background-color:white"><i class="fa fa-dashboard fa-fw" style="background-color:white"></i> Quản lý khách hàng</a>
                            <!-- /.nav-second-level -->
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <div id="page-wrapper">
            @RenderBody()
        </div>
    </div>
    <!-- /#wrapper -->
    <!-- jQuery -->

    <script src="~/Areas/Admin/Asset/js/jquery.min.js"></script>

    <!-- Bootstrap Core JavaScript -->

    <script src="~/Areas/Admin/Asset/js/bootstrap.min.js"></script>

    <!-- Metis Menu Plugin JavaScript -->

    <script src="~/Areas/Admin/Asset/js/metisMenu.min.js"></script>

    <!-- Morris Charts JavaScript -->

    <script src="~/Areas/Admin/Asset/js/morris-data.js"></script>
    <script src="~/Areas/Admin/Asset/js/morris.min.js"></script>
    <script src="~/Areas/Admin/Asset/js/raphael.min.js"></script>

    <!-- Custom Theme JavaScript -->

    <script src="~/Areas/Admin/Asset/js/startmin.js"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>